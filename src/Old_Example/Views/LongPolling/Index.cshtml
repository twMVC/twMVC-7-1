@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
<script type="text/javascript">
    $(function () {
        LoadData();
    });

    function LoadData() {
        $.ajax({
            url: '@Url.Action("Load")',
            success: function (data) {
                $('#container').append('<p>' + data + '</p>');
            }
        }).done(LoadData);
    }
</script>
}

<div id="container"></div>
