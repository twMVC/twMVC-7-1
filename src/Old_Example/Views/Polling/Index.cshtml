@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
<script type="text/javascript">
    $(function () {
        LoadData();
    });

    function LoadData() {
        setTimeout(function(){
            $.ajax({
                url: '@Url.Action("Load")',
                success: function (data) {
                    $('#container').append('<p>' + data + '</p>');
                    LoadData();
                }
            });
        },1000);
    }
</script>
}

<div id="container"></div>
